blur enable
blur_xray disable
blur_passes 5
blur_radius 5
shadows enable
shadow_color $text
shadow_inactive_color $muted
shadow_blur_radius 5
shadow_offset 10 10
corner_radius 5
default_dim_inactive 0.3
dim_inactive_colors.unfocused #999999
titlebar_separator disable
