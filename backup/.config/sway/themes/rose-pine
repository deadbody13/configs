font pango:FantasqueSansM Nerd Font 10

##########
# Colors #
##########
# set primary Ros√© Pine Dawn colorscheme colors
set $base           #faf4ed
set $surface        #fffaf3
set $overlay        #f2e9e1
set $muted          #9893a5
set $subtle         #797593
set $text           #575279
set $love           #b4637a
set $gold           #ea9d34
set $rose           #d7827e
set $pine           #286983
set $foam           #56949f
set $iris           #907aa9
set $highlightlow   #f4ede8
set $highlightmed   #dfdad9
set $highlighthigh  #cecacd

# Theming border and Windows --------------
# target                 title		bg			text		indicator	border
client.focused           $text     	$text		$base		$text		$text
client.focused_inactive  $base	   	$surface	$base		$surface	$surface
client.unfocused         $highlighthigh     	$highlighthigh		$text		$rose		$highlighthigh
client.urgent            $text     	$base 		$text 		$love		$love
client.placeholder       $base		$base 		$text 		$overlay   	$overlay
client.background        $text

################
# Theme and FX #
################
output eDP-1 bg ~/Pictures/Wallpapers/pokemon/pidgeot_with-pokeball.jpg fill
default_border normal 3
for_window [class="^.*"] border 5
