client.focused           #fb4934 #282828 #fb4934 #fb4934
client.focused_inactive  #282828 #282828 #bdae93 #282828
client.unfocused         #282828 #282828 #bdae93 #282828
client.urgent            #fb4934 #282828 #fb4934 #fb4934

